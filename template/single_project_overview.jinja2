<div class="media">
    <div class="media-body">

        <h2 class="media-head">
            {{ project.title }}{% if project.supervisor_user %} - {{ project.supervisor_user.name }}{% endif %}
            {% if not project.read_only %}
                <small><a href="/projects/{{ project.title }}/edit">(edit)</a></small>
            {% endif %}
        </h2>
    </div>
    <div class="media-left media-middle" style="width:10%">
        {% if project.is_wetlab %}
        Wetlab
        {% endif %}
        {% if project.is_computational %}
        Computational
        {% endif %}
    </div>
    {{ project.abstract }}
    {{ lipsum(2) }}
</div>